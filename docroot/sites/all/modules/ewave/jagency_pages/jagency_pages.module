      break;
  }
}

/**getting how long - from program details**/
function time_elapsed_A($secs){
  if (!$secs) {
    return;
  }
  $bit = array(
    'YEAR' => $secs / 29030400 % 12,
    'WEEK' => $secs / 604800 % 52,
    'DAY' => $secs / 86400 % 7
    );
    
  foreach($bit as $k => $v)
    if($v > 0)$ret[] = $v . ' ' . format_plural($v, $k, $k.'S'); ;
    
  return join(', ', $ret);
}

